.modal
  max-width 400px
  margin 0 auto
  color white
  padding 20px 25px 20px
  border 4px solid white
  &__btn-close
    position absolute
    top 20px
    right 20px
    color white
    font-size 24px
    line-height 1em
    z-index 10
    &:hover, &:focus
      color white
  &__header
    padding 20px 0 20px
    margin-top -20px
  &__footer
    padding 20px 0 30px
    margin-bottom -20px
    text-align center
  &__title
    text-align center
    font-size 24px
    margin 0
    color white
  &_map
    max-width none
    margin -60px -20px -20px
    height 100vh
    padding 0
    border 0
    & {$p}__btn-close
      color #666666


  @media (min-width $screen-sm-min)
    padding 40px 40px 40px
    &__btn-close
      position fixed
    &__header
      padding 40px 0 30px
      margin-top -40px
    &__footer
      padding 30px 0 40px
      margin-bottom -40px
      text-align center
    &__title
      text-align center
      font-size 24px
      margin 0
      color white
    &_map
      margin 0
      height calc(100vh - 80px)
      padding 13px
      border 4px solid white
      & {$p}__btn-close
        color white

