.header-section
  flex none
  padding 25px 0
  margin-top -25px
  z-index 10
  p
    margin 0
    max-width none
  &__row
    display flex
  &__col
    &_1
      flex 1 1 auto
      overflow hidden
    &_4
      margin-left 35px
      display flex
      align-items center

  @media (min-width $screen-sm-min)
    padding 50px 0
    margin-top -50px

  @media (min-width $screen-md-min)
    &__col
      &_3
        margin-left 125px