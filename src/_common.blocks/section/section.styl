.section
  padding 25px 0
  display flex
  flex-flow column
  &_main
    background url('main-bg.jpg') no-repeat 50% 0/cover
    .decoration
      position absolute
      left 20px
      margin-left -7px
      margin-top 30px
      display flex
      flex-flow column
      align-items center
      pointer-events none
      &:before, &:after
        content ''
        square 14px
        border 3px solid white
        border-radius 50%
        flex none
      &__line
        flex 1 1 188px
        border-left 1px solid rgba(#89879a, 0.4)

  @media (min-width $screen-sm-min)
    padding 50px 0
    &_main
      .decoration
        left percentage(102/$screen-sm-min/2)
        margin-top 2px
        &__line
          flex 1 1 277px

  @media (min-width $screen-md-min)
    &_main
      .decoration
        left percentage(215/$screen-md-min/2)