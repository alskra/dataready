.gallery-slider-2
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  padding 0
  margin auto
  &:before
    content ''
    position absolute
    top 0
    left -3.5%
    right -3.5%
    bottom 0
    background url("gallery-bg.jpg") no-repeat 50% 0/100% auto
    display block
  .slick-slider
    position absolute
    top -30px
    left -30px
    right -30px
    bottom -30px
    margin 4.9% 11.3% 0
    overflow hidden
  .slick-track, .slick-slide
    height 100%
  .slick-list
    height calc(100% - 40px)
    padding 15px !important
  .slick-slide
    padding 15px
    display flex
    flex-flow column
    justify-content space-between
    position relative
    &.slick-active
      & {$p}__item, & {$p}__overlay
        box-shadow 0 7px 27.8px 1.2px rgba(0, 0, 0, 0.35)
  .slick-arrow
    position absolute
    font-size 20px
    line-height 1
    bottom 34px
    z-index 10
    color white
    transition 0.15s
    width 16px
    height 3px
    background white
    transform translate3d(0, 0, 0)
    &:before, &:after
      content ''
      position absolute
      border-top 4px solid transparent
      border-bottom 4px solid transparent
      top 1px
      height 9px
      margin -4px 0
    &:before
      border-right 6px solid
      left -6px
    &:after
      border-left 6px solid
      right -6px
    &:hover
      width 26px
  .slick-prev
    right 50%
  .slick-next
    left 50%
  &__item
    position relative
    height 100%
    cursor pointer
    //box-shadow 0 7px 27.8px 1.2px rgba(0, 0, 0, 0.35)
    &:before
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color #282735
      mix-blend-mode color
    &:hover
      & {$p}__overlay
        transition visibility 0s, opacity 0.15s
        visibility visible
        opacity 1
    &_row
      height calc(50% - 10px)
  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(#1d1c2a, 0.9)
    //box-shadow 0 7px 27.8px 1.2px rgba(0, 0, 0, 0.35)
    z-index 2
    padding 20px
    text-align center
    display flex
    flex-flow column
    justify-content center
    transition visibility 0s 0.15s, opacity 0.15s
    visibility hidden
    opacity 0
    &:before
      content ''
      position absolute
      top -17px
      left -17px
      right -17px
      bottom -17px
      border 4px solid white
      pointer-events none
  &__title
    flex none
    color white
    font-size 18px
    margin-bottom 25px
    width 100%
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
  &__caption
    flex 1 1 auto
    color #cfcddd
    font-size 15px
    line-height ($line-height-base)em
    margin-bottom 15px
    width 100%
    overflow hidden
    max-height 30%
  &__icon-view
    flex none
    font-size 22px
    line-height 1
    color $blue-3
    width 100%
    overflow hidden

  @media (min-width $screen-sm-min)
    max-height 350px
    bottom 50px
    &:before
      top -60px
      left 0
      right 0
      bottom -40px
      background url("gallery-bg.jpg") no-repeat 50% 0/auto 100%
    .slick-slider
      margin 0

  @media (min-width $screen-md-min)
    max-height 445px
    &:before
      top -90px
      bottom -80px